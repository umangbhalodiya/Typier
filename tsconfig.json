{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "components/WordContainer.js",
    "components/Timer.js",
    "components/RestartButton.js",
    "components/Records.js",
    "components/Podium.js",
    "components/LanguageSelector.js",
    "components/Input.js",
    "components/Heading.js",
    "components/Footer.js",
    "pages/_document.js",
    "pages/index.js",
    "pages/_app.js",
    "utils/shuffleWord.js"
  ]
}